{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    // "noImplicitThis": true,
    // "strictNullChecks": true,
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@routes/*": ["src/routes/"],
      "@pages/*": ["src/containers/Pages"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}